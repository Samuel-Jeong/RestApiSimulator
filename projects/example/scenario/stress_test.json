{
  "name": "Stress Test Scenario",
  "description": "High-load stress test with 50 TPS",
  "host": "default",
  "tags": ["stress", "performance", "local"],
  "load_test_config": {
    "duration_seconds": 60,
    "target_tps": 50,
    "ramp_up_seconds": 10,
    "max_concurrent": 50,
    "distribution": "exponential"
  },
  "steps": [
    {
      "name": "Get Posts",
      "method": "GET",
      "path": "/posts",
      "assertions": [
        {
          "field": "status",
          "operator": "eq",
          "value": 200
        }
      ]
    },
    {
      "name": "Get Comments",
      "method": "GET",
      "path": "/comments",
      "assertions": [
        {
          "field": "status",
          "operator": "eq",
          "value": 200
        }
      ]
    },
    {
      "name": "Get Stats",
      "method": "GET",
      "path": "/stats",
      "assertions": [
        {
          "field": "status",
          "operator": "eq",
          "value": 200
        }
      ]
    }
  ]
}

